<!--Este es el (main) contenedor del contenido de la aplicacion para hacer 
  un display:flex; (flexbox)-->
  <main class="main_flexbox_del_contenido_de_la_app">

    
        <form class="form_crear_socio_actualizar" action="/recibir-datos-a-actualizar/<%=data.idSocio%>" method="post">
    
            <div class="contenedor_input_actualizar_socio">
                <img class="icono_guardar_socio" src="http://localhost:3000/imagenes/usuarioUpdate.png" alt="">
    
                <h1 style="display:inline;">Actualizar socio</h1>
                <p> <span>Nuevos datos aqui!</span></p>
                <br>
                <span>ID socio:</span> 
                <input type="text" required name="idSocio" readonly style="color:rgb(197, 137, 8);"
                    value="<%=data.idSocio%>"> <br>
    
                  

                    <span>Activo o inactivo:</span>
                    <input type="text" maxlength="8" name="activo_inactivo" value="<%=data.activo_inactivo %>"><br>
        

                <span>Cedula:</span>
                <input type="number" required name="cedulaSocio" value="<%=data.cedulaSocio %>"><br>
    
                <span>Nombre:</span>
                <input type="text" maxlength="11" required name="nombreSocio" value="<%=data.nombreSocio %>"><br>
    
                <span>Apellidos:</span>
                <input type="text" maxlength="24" required name="apellidosSocio" value="<%=data.apellidosSocio %>"><br>
    
                <span>Fecha Nacimiento:</span>
                <input type="text" required name="fechaNacimiento" value="<%=data.fechaNacimiento %>"><br>
    
                <span>Telefono:</span>
                <input type="number" maxlength="15" class="input-direccion" name="socioTelefono" required
                    value="<%=data.socioTelefono %>">
                <br>
                <span>Direccion:</span>
                <input type="text" maxlength="100" required name="socioDireccion" value="<%=data.socioDireccion %>"> <br>
    
                <span>Correo Electronico:</span>
                <input type="email" maxlength="40" required name="socioCorreoElectronico"
                    value="<%=data.socioCorreoElectronico %>"><br>
    
                <span>Sexo:</span>
                <input maxlength="9" type="text" name="sexo" value="<%=data.sexo %>"> <br>

                <span>Estado civil:</span>
                <input maxlength="9" type="text" name="estadoCivil" value="<%=data.estadoCivil %>"> <br>

                 
                <span>Puesto de trabajo:</span>
                <input type="text" maxlength="40" required name="puestoTrabajo"
                    value="<%=data.puestoTrabajo %>"><br>

                    
                <span>Nombre de la empresa:</span>
                <input type="text" maxlength="40" required name="nombreEmpresa"
                    value="<%=data.nombreEmpresa %>"><br>

                    
                <span>Direccion de empresa:</span>
                <input type="text" maxlength="60" required name="direccionEmpresa"
                    value="<%=data.direccionEmpresa %>"><br>

                    
                <span>Ganancias mensual:</span>
                <input type="number" maxlength="40" required name="gananciasMensual"
                    value="<%=data.gananciasMensual %>"><br>

                   
    
                <div class="conten-actualizar_buttom">
                    <button type="submit">Actualizar</button>
                </div>
    
            </div>
        </form>
    
        <hr>
    </main>




    

