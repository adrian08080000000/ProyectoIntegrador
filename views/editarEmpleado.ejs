      <header class="header">
      <p class="p1">Pagina / Editar Empleado</p>
      </header>
      
      <main class="principal">
        <% if(idUsuario) {%> 
        <div class="card-header">
            <h1>Modificar Datos Del Usuarios :</h1>
        <div class="card-body">
            <form  id="miFormulario" action="/mantenimiento-empleados" method="post">
                <input type="hidden" id="id" name="id" value="<%=idUsuario %> ">
                    <div class="mb-3">
                        <label class="form-label" id="nombre" for="nombre">Nombre :</label>
                    <input class="form-control" type="text" name="nombre" id="nombre" required>
                    </div>
                    
                    <div class="mb-3" >
                        <label class="form-label" for="usr">Nombre de usuario :</label>
                        <input class="form-control" type="text"  id="usr" name="name" required> 
                    </div>
                  

                    <label  > Permisos :</label>
                    <input  type="radio" value="Admin" name="permisos"> Administrador
                    <input  type="radio" value="normal" name="permisos"> Normal <br><br>

                    <label class="form-label" for="contra">Contraseña :</label>
                    <input class="form-control" type="password" name="contra" id="contra" required>
                    <br><br>
                    <label for="conf-contra">Confirmar contraseña :</label> 
                    <input class="form-control" type="password" name="conf-contra" id="conf-contra" required>
                    <br><br>
                    <button type="submit" class="btn btn-success" id="confirmar">Editar</button>
            </form>
        </div>

        </div>
        <% } %> 
