  <header class="header bg-success">


    <h1  style="font-size: 25px;" class="text-white ph">Pagina/ Mantenimiento Socios</h1>
    <% if (typeof username !== 'undefined') { %>
       
        <p class="text-white ph">Bienvenido, <%= username %>!</p>
    <% } else { %>
        <p></p>
    <% } %>
  
  </header>
    </div>

    </div>
    <main class="principal">
      <div class="card-header">
        

    <div>
      <div>
        <form class="" action="/guardar-Socio" method="post">

          <div class="contenedor_input_crear_socio">
            <img class="icono_guardar_socio" src="https://cdn-icons-png.flaticon.com/128/3200/3200748.png" alt="">
      
            <h1 style="display:inline;">Datos aqui</h1>
            <p> Create nuevo socio!</p>
            
         
            
      
            <br>
            <input type="number" maxlength="11" required name="cedulaSocio" placeholder="Cedula: 11 caracteres">
      
            <input type="text" maxlength="11" required name="nombreSocio" placeholder="Nombre: 11 caracteres"><br>
      
            <input type="text" maxlength="24" required name="apellidosSocio" placeholder="Apellidos: 24 caracteres">
           
           
            <input style="display: none;" type="text"  name="activo_inactivo" value="Activo"><br>
      
      
            <span>Fecha de nacimiento</span>
            <input type="date" required name="fechaNacimiento"><br>
      
            <input type="email" maxlength="40" required name="socioCorreoElectronico" placeholder="Correo: 40 caracteres">
      
            <input type="text" maxlength="15" name="socioTelefono" required placeholder="Telefono: 15 caracteres">
            <br>
            
            <input type="text" maxlength="100" required name="socioDireccion" placeholder="Direccion socio: 100 caracteres">
            <br>
      
            <label>Sexo:</label>
            <select title="Haga click y selecione" class="clase_select_crear_socio" id="estadoCivil" name="sexo">
              <option value="M">Masculino</option>
              <option value="F">Femenino</option>
            </select>
      
            <label>Estado civil:</label>
            <select title="Haga click y selecione" class="clase_select_crear_socio" name="estadoCivil">
              <option value="Soltero/a">Soltero/a</option>
              <option value="Casado/a">Casado/a</option>
            </select>
      
            
           
      <!--input de empresa-->
            
      
            <input type="text" maxlength="50" required name="puestoTrabajo" placeholder="Puesto Trabajo: 50 caracteres"> <br>
      
            <input type="text" maxlength="50" required name="nombreEmpresa" placeholder="Nombre empresa: 50 caracteres"> <br>
      
            <input type="text" maxlength="100" required name="direccionEmpresa" placeholder="Direccion empresa: 50 caracteres"> <br>
      
            <input type="number" maxlength="100" required name="gananciasMensual" placeholder="Ganancias mensual empresa: 50 caracteres"> <br>
      
            
      
            <div class="conten-guardar">
              <button title="Guardar datos" type="submit">Guardar</button>
            </div>
      
          </div>
        </form>
    </div>
    <div class="main-class">
      <% if (typeof socio !=='undefined' ) { %>
        <h2>Datos del socio encontrado:</h2>
        <p>Nombre: <%= socio.nombreSocio %>
        </p>
        <p>Apellido: <%= socio.apellidosSocio %>
        </p>
        <!-- Otros campos de datos del socio aquÃ­ -->
  
        <% } %>
