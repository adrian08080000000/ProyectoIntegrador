<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/aut" method="post">
        <label for="nombre">Nombre de usuario</label>
        <input type="text" name="nombre" required>

        <label for="nc">Nombre Completo</label>
        <input type="text" name="nc" id="nc"required>

        <label for="permisos">Permisos</label>
        Normal <input type="radio" value="Normal" name="permisos" required>
        Administrador <input type="radio" value="Admin" name="permisos" required>

        <label for="contra">Contraseña</label>
        <input type="password" name="contra" required>

        <label for="confiContra">Confirmar Contraseña</label>
        <input type="text" name="confiContra" required>

        <input type="submit" value="save">
    </form>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(typeof alert  != "undefined"){ %>
        <script>
            Swal.fire({
                title : '<%= alertTitle %>',
                text : '<%= alertMenssage %>',
                icon : '<%=alertIcon %>',
                showConfirmButton: '<%= showConfirmButton %>',
                timer : '<%= timer%>',
            }).then(()=>{
                window.location='/<%= ruta%>'
            })
        </script>
    <% } %> 
</body>
</html>