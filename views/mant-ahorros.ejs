                        <li class="list__inside">
                            <a href="#" class="nav__link nav__link--inside"> Retiro</a>
                        </li>
        
                        <li class="list__inside">
                          <a href="#" class="nav__link nav__link--inside">Pago</a>
                      </li>
                     
                    </ul>
                  </li>
                    <li class="list__item">
                      <div class="list__button">
                          <img src="./recursos/icon/dashboard.svg" class="list__img">
                          <a href="/cerrar-sesion" class="nav__link" id="cerrar-sesion">Cerra sesion</a>
                      </div>
                  </li>
                
        
        </nav>

      
      <header class="header">
        <% if (typeof username !== 'undefined') { %>
            <p>Bienvenido, <%= username %>!</p>
        <% } else { %>
            <p>No has iniciado sesi√≥n.</p>
        <% } %>
      
      </header>
      
      <main class="principal">

        <div class="card-header">
            
            <h1>Mantenimiento de Cuenta de Ahorro:</h1>
            <div class="div1-ahorro"> 
                <p>Creacion de Cuenta de Ahorro</p>
                <a href="/creacion-Ahorro"><button>crear</button></a>
            </div>
        <div>
            <table  class="table table-bordered table-striped text-center">
                <thead>
                <tr class="bg-primary text-white">
                  <th scope="col">ID</th>
                  <th scope="col">Cuenta Socio</th>
                  <th scope="col">Saldo</th>
                  <th scope="col">Fecha Creacion</th>
                  <th scope="col">Estado</th>
                </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(cuentaahorros => { %>
                      <tr>
                        <td><%= cuentaahorros.idCuentaAhorros %></td>
                        <td><%= cuentaahorros.cuentaSocio %></td>
                        <td><%= cuentaahorros.saldo %></td>
                        <td><%= cuentaahorros.fechaCreacion %></td>
                        <td><%= cuentaahorros.estado %></td>
                      </tr>
                    <% }); %>
                  </tbody>
              </table>
        </div>

   

      </main>
      </aside>

      <script src="./recursos/javaScript/barraLateral.js"></script>
      <script src="./recursos/javaScript/tabla.js"></script>
      <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

      <% if (typeof alert != "undefined") { %>
      <script>
          Swal.fire({
              title: '<%= alertTitle %>',
              text: '<%= alertMenssage %>',
              icon: '<%= alertIcon %>',
              showConfirmButton: '<%= showConfirmButton%>',
              timer: '<%= timer%>'
          }).then((result) => {
            window.location.href = '/<%= ruta %>'
          });
      </script>
      <% } %>
</body>
</html>